<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".J_BuscarPerfil">

    <ImageView
        android:id="@+id/fondo2"
        android:layout_width="400dp"
        android:layout_height="760dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fndbuscarperfil" />

    <ImageButton
        android:id="@+id/volverBuscarPerfil"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/btnvolver"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/btnvolver" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="357dp"
        android:layout_height="72dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volverBuscarPerfil">

        <TextView
            android:id="@+id/texto"
            android:layout_width="254dp"
            android:layout_height="48dp"
            android:background="@drawable/barrablanca"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nombre de usuario o mascota..." />

        <ImageButton
            android:id="@+id/botonBuscar"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btnlupa"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/btnlupa" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/user2"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:background="@drawable/user"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.221"
        app:srcCompat="@drawable/marco" />

    <ImageButton
        android:id="@+id/pet2"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_marginBottom="104dp"
        android:layout_weight="1"
        android:background="@drawable/pata"

        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/marco" />

    <ImageButton
        android:id="@+id/user3"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:background="@drawable/user"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.221"
        app:srcCompat="@drawable/marco" />

    <ImageButton
        android:id="@+id/pet3"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_marginBottom="104dp"
        android:layout_weight="1"
        android:background="@drawable/pata"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pet2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/marco" />

    <ImageButton
        android:id="@+id/user1"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:background="@drawable/user"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.221"
        app:srcCompat="@drawable/marco"
        android:clickable="true"
        android:onClick="redirectToSecondLayout"/>
        />

    <ImageButton
        android:id="@+id/pet1"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_marginBottom="104dp"
        android:layout_weight="1"
        android:background="@drawable/pata"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pet2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/marco" />

</androidx.constraintlayout.widget.ConstraintLayout>