<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".C_Home">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="415dp"
        android:layout_height="764dp"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondohome"
        tools:layout_editor_absoluteX="-3dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="387dp"
        android:layout_height="98dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/AgregarPublicacion"
            android:layout_width="109dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:background="@drawable/btnpublicacion"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/btnpublicacion" />

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="55dp"
            android:background="@drawable/barra"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAdoptar"
                android:layout_width="40dp"
                android:layout_height="31dp"
                android:background="@drawable/adoptar"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/adoptar" />

            <ImageButton
                android:id="@+id/btnBuscar"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/buscar"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/buscar" />

            <ImageButton
                android:id="@+id/btnAjustes"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:background="@drawable/ajustes"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ajustes" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/perfil"
            android:layout_width="91dp"
            android:layout_height="94dp"
            android:background="@drawable/perfilejemplo"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/perfilejemplo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="90dp"
        android:layout_height="593dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/barralateral"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondo"
        app:layout_constraintVertical_bias="0.697">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home"
            android:layout_width="64dp"
            android:layout_height="534dp"
            android:layout_margin="10dp"
            android:foregroundGravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="592dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="@+id/fondo"
        app:layout_constraintVertical_bias="0.69">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>