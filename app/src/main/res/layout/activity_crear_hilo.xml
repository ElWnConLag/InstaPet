<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFF59D"
android:backgroundTint="#FFF179"
tools:context=".CrearHilo">

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:backgroundTint="#FECC38"
        android:contentDescription="TODO"
        android:src="@mipmap/tick_correcto_amarillo_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926"
        tools:ignore="ContentDescription,MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="213dp"
        android:layout_height="69dp"
        android:background="#FFEB3B"
        android:backgroundTint="#FFCD38"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <ImageButton
            android:id="@+id/botonPerfil1"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:backgroundTint="#07CC00"
            android:contentDescription="@string/todo"
            app:circularflow_defaultAngle="3"
            app:srcCompat="@drawable/ic_launcher_foreground"
            app:tint="#000000"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/botonPerfil2"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:backgroundTint="#F44336"
            android:contentDescription="@string/todo1"
            app:circularflow_defaultAngle="3"
            app:srcCompat="@drawable/ic_launcher_foreground"
            app:tint="#000000"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/botonPerfil3"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#5D07FE"
            android:contentDescription="@string/todo2"
            app:circularflow_defaultAngle="3"
            app:srcCompat="@drawable/ic_launcher_foreground"
            app:tint="#000000"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="360dp"
        android:layout_height="175dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#FECC38"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="360dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="agregar_descripcion_publicacion"
        android:inputType="text"
        android:text="Descripcion..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="agregar_titulo_publicacion"
        android:inputType="text"
        android:text="@string/titulo_de_publicacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>